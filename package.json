{
  "name": "scrcpy-vscode",
  "displayName": "Scrcpy for VS Code",
  "description": "Android device screen mirroring in VS Code",
  "version": "0.1.0",
  "publisher": "izan",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/izan/scrcpy-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "General",
        "order": 0,
        "properties": {
          "scrcpy.path": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to scrcpy installation directory (leave empty to use PATH)"
          }
        }
      },
      {
        "title": "Video Quality",
        "order": 1,
        "properties": {
          "scrcpy.maxSize": {
            "type": "number",
            "default": 1920,
            "order": 0,
            "enum": [
              720,
              1080,
              1440,
              1920
            ],
            "enumDescriptions": [
              "720 max - Lower resolution, best performance",
              "1080 max - HD resolution",
              "1440 max - QHD resolution",
              "1920 max - Full resolution (default)"
            ],
            "markdownDescription": "Maximum screen dimension (width or height) in pixels"
          },
          "scrcpy.bitRate": {
            "type": "number",
            "default": 8,
            "order": 1,
            "enum": [
              2,
              4,
              8,
              16,
              32
            ],
            "enumDescriptions": [
              "2 Mbps - Low quality, minimal bandwidth",
              "4 Mbps - Medium quality",
              "8 Mbps - High quality (recommended)",
              "16 Mbps - Very high quality",
              "32 Mbps - Maximum quality"
            ],
            "markdownDescription": "Video bitrate in Mbps"
          },
          "scrcpy.maxFps": {
            "type": "number",
            "default": 60,
            "order": 2,
            "enum": [
              15,
              30,
              60
            ],
            "enumDescriptions": [
              "15 FPS - Low frame rate, saves bandwidth",
              "30 FPS - Standard frame rate",
              "60 FPS - Smooth frame rate (recommended)"
            ],
            "markdownDescription": "Maximum frames per second"
          }
        }
      },
      {
        "title": "Device",
        "order": 2,
        "properties": {
          "scrcpy.screenOff": {
            "type": "boolean",
            "default": false,
            "order": 0,
            "markdownDescription": "Turn device screen off while mirroring (saves battery)"
          },
          "scrcpy.stayAwake": {
            "type": "boolean",
            "default": true,
            "order": 1,
            "markdownDescription": "Keep device awake during mirroring"
          },
          "scrcpy.showTouches": {
            "type": "boolean",
            "default": false,
            "order": 2,
            "markdownDescription": "Show visual touch feedback on device screen"
          }
        }
      },
      {
        "title": "Audio",
        "order": 3,
        "properties": {
          "scrcpy.audio": {
            "type": "boolean",
            "default": true,
            "order": 0,
            "markdownDescription": "Enable audio streaming from device (requires scrcpy 2.0+)"
          }
        }
      },
      {
        "title": "Display",
        "order": 4,
        "properties": {
          "scrcpy.showStats": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "Show FPS and frame count statistics overlay"
          }
        }
      },
      {
        "title": "Clipboard",
        "order": 5,
        "properties": {
          "scrcpy.clipboardSync": {
            "type": "boolean",
            "default": true,
            "order": 0,
            "markdownDescription": "Automatically sync clipboard between host and device"
          },
          "scrcpy.clipboardPollInterval": {
            "type": "number",
            "default": 1000,
            "order": 1,
            "enum": [
              500,
              1000,
              2000,
              3000,
              5000
            ],
            "enumDescriptions": [
              "500ms - Fastest, slightly higher CPU usage",
              "1000ms - Balanced (default)",
              "2000ms - Lower CPU usage",
              "3000ms - Minimal CPU usage",
              "5000ms - Slowest, minimal resource usage"
            ],
            "markdownDescription": "Clipboard polling interval in milliseconds. *Only applies when `#scrcpy.clipboardSync#` is enabled.*"
          }
        }
      },
      {
        "title": "Connection",
        "order": 6,
        "properties": {
          "scrcpy.autoConnect": {
            "type": "boolean",
            "default": true,
            "order": 0,
            "markdownDescription": "Automatically connect to devices when they are plugged in"
          },
          "scrcpy.autoReconnect": {
            "type": "boolean",
            "default": true,
            "order": 1,
            "markdownDescription": "Automatically attempt to reconnect when connection is lost"
          },
          "scrcpy.reconnectRetries": {
            "type": "number",
            "default": 2,
            "order": 2,
            "enum": [
              1,
              2,
              3,
              5
            ],
            "enumDescriptions": [
              "1 retry",
              "2 retries (default)",
              "3 retries",
              "5 retries"
            ],
            "markdownDescription": "Number of reconnection attempts before showing error. *Only applies when `#scrcpy.autoReconnect#` is enabled.*"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "scrcpy.start",
        "title": "Scrcpy: Start Device Mirroring"
      },
      {
        "command": "scrcpy.stop",
        "title": "Scrcpy: Stop Device Mirroring"
      },
      {
        "command": "scrcpy.openSettings",
        "title": "Scrcpy: Open Settings",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "scrcpy.openSettings",
          "when": "view == scrcpy.deviceView",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scrcpy",
          "title": "Android Device",
          "icon": "media/android.svg"
        }
      ]
    },
    "views": {
      "scrcpy": [
        {
          "type": "webview",
          "id": "scrcpy.deviceView",
          "name": "Screen",
          "icon": "media/android.svg",
          "contextualTitle": "Android Device"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "opus-decoder": "^0.7.11"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
