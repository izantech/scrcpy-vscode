{
  "name": "scrcpy-vscode",
  "displayName": "Scrcpy for VS Code",
  "description": "Android device screen mirroring in VS Code",
  "version": "0.1.0",
  "publisher": "izan",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/izan/scrcpy-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scrcpy.start",
        "title": "Scrcpy: Start Device Mirroring"
      },
      {
        "command": "scrcpy.stop",
        "title": "Scrcpy: Stop Device Mirroring"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scrcpy",
          "title": "Android Device",
          "icon": "media/android.svg"
        }
      ]
    },
    "views": {
      "scrcpy": [
        {
          "type": "webview",
          "id": "scrcpy.deviceView",
          "name": "Screen",
          "icon": "media/android.svg",
          "contextualTitle": "Android Device"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
