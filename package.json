{
  "name": "scrcpy-vscode",
  "displayName": "Scrcpy for VS Code",
  "description": "%description%",
  "version": "0.1.4",
  "publisher": "izantech",
  "license": "Apache-2.0",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/izantech/scrcpy-vscode"
  },
  "bugs": {
    "url": "https://github.com/izantech/scrcpy-vscode/issues"
  },
  "homepage": "https://github.com/izantech/scrcpy-vscode#readme",
  "keywords": [
    "android",
    "scrcpy",
    "device",
    "mirror",
    "screen",
    "adb",
    "mobile",
    "debug"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "l10n": "./l10n",
  "categories": [
    "Other",
    "Debuggers"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "%config.title.general%",
        "order": 0,
        "properties": {
          "scrcpy.path": {
            "type": "string",
            "default": "",
            "order": 0,
            "markdownDescription": "%config.scrcpy.path%"
          },
          "scrcpy.adbPath": {
            "type": "string",
            "default": "",
            "order": 1,
            "markdownDescription": "%config.scrcpy.adbPath%"
          },
          "scrcpy.apkInstallDefaultPath": {
            "type": "string",
            "default": "",
            "order": 2,
            "markdownDescription": "%config.scrcpy.apkInstallDefaultPath%"
          },
          "scrcpy.clipboardSync": {
            "type": "boolean",
            "default": true,
            "order": 3,
            "markdownDescription": "%config.scrcpy.clipboardSync%"
          },
          "scrcpy.showStats": {
            "type": "boolean",
            "default": false,
            "order": 4,
            "markdownDescription": "%config.scrcpy.showStats%"
          },
          "scrcpy.showExtendedStats": {
            "type": "boolean",
            "default": false,
            "order": 5,
            "markdownDescription": "%config.scrcpy.showExtendedStats%"
          }
        }
      },
      {
        "title": "%config.title.videoQuality%",
        "order": 1,
        "properties": {
          "scrcpy.videoSource": {
            "type": "string",
            "default": "display",
            "order": 0,
            "enum": [
              "display",
              "camera"
            ],
            "enumDescriptions": [
              "%config.scrcpy.videoSource.display%",
              "%config.scrcpy.videoSource.camera%"
            ],
            "markdownDescription": "%config.scrcpy.videoSource%"
          },
          "scrcpy.videoCodec": {
            "type": "string",
            "default": "h264",
            "order": 1,
            "enum": [
              "h264",
              "h265",
              "av1"
            ],
            "enumDescriptions": [
              "%config.scrcpy.videoCodec.h264%",
              "%config.scrcpy.videoCodec.h265%",
              "%config.scrcpy.videoCodec.av1%"
            ],
            "markdownDescription": "%config.scrcpy.videoCodec%"
          },
          "scrcpy.maxSize": {
            "type": "number",
            "default": 1920,
            "order": 1,
            "enum": [
              720,
              1080,
              1440,
              1920
            ],
            "enumDescriptions": [
              "%config.scrcpy.maxSize.720%",
              "%config.scrcpy.maxSize.1080%",
              "%config.scrcpy.maxSize.1440%",
              "%config.scrcpy.maxSize.1920%"
            ],
            "markdownDescription": "%config.scrcpy.maxSize%"
          },
          "scrcpy.bitRate": {
            "type": "number",
            "default": 8,
            "order": 2,
            "enum": [
              2,
              4,
              8,
              16,
              32
            ],
            "enumDescriptions": [
              "%config.scrcpy.bitRate.2%",
              "%config.scrcpy.bitRate.4%",
              "%config.scrcpy.bitRate.8%",
              "%config.scrcpy.bitRate.16%",
              "%config.scrcpy.bitRate.32%"
            ],
            "markdownDescription": "%config.scrcpy.bitRate%"
          },
          "scrcpy.maxFps": {
            "type": "number",
            "default": 60,
            "order": 3,
            "enum": [
              15,
              30,
              60
            ],
            "enumDescriptions": [
              "%config.scrcpy.maxFps.15%",
              "%config.scrcpy.maxFps.30%",
              "%config.scrcpy.maxFps.60%"
            ],
            "markdownDescription": "%config.scrcpy.maxFps%"
          }
        }
      },
      {
        "title": "%config.title.camera%",
        "order": 2,
        "properties": {
          "scrcpy.cameraFacing": {
            "type": "string",
            "default": "back",
            "order": 0,
            "enum": [
              "front",
              "back",
              "external"
            ],
            "enumDescriptions": [
              "%config.scrcpy.cameraFacing.front%",
              "%config.scrcpy.cameraFacing.back%",
              "%config.scrcpy.cameraFacing.external%"
            ],
            "markdownDescription": "%config.scrcpy.cameraFacing%"
          },
          "scrcpy.cameraId": {
            "type": "string",
            "default": "",
            "order": 1,
            "markdownDescription": "%config.scrcpy.cameraId%"
          },
          "scrcpy.cameraSize": {
            "type": "string",
            "default": "",
            "order": 2,
            "pattern": "^(\\d+x\\d+)?$",
            "markdownDescription": "%config.scrcpy.cameraSize%"
          },
          "scrcpy.cameraFps": {
            "type": "number",
            "default": 0,
            "order": 3,
            "minimum": 0,
            "maximum": 120,
            "markdownDescription": "%config.scrcpy.cameraFps%"
          }
        }
      },
      {
        "title": "%config.title.device%",
        "order": 3,
        "properties": {
          "scrcpy.displayMode": {
            "type": "string",
            "default": "mirror",
            "order": 0,
            "enum": [
              "mirror",
              "virtual"
            ],
            "enumDescriptions": [
              "%config.scrcpy.displayMode.mirror%",
              "%config.scrcpy.displayMode.virtual%"
            ],
            "markdownDescription": "%config.scrcpy.displayMode%"
          },
          "scrcpy.virtualDisplayWidth": {
            "type": "number",
            "default": 1080,
            "order": 1,
            "markdownDescription": "%config.scrcpy.virtualDisplayWidth%"
          },
          "scrcpy.virtualDisplayHeight": {
            "type": "number",
            "default": 1920,
            "order": 2,
            "markdownDescription": "%config.scrcpy.virtualDisplayHeight%"
          },
          "scrcpy.virtualDisplayDpi": {
            "type": "number",
            "default": 0,
            "order": 3,
            "markdownDescription": "%config.scrcpy.virtualDisplayDpi%"
          },
          "scrcpy.screenOff": {
            "type": "boolean",
            "default": false,
            "order": 4,
            "markdownDescription": "%config.scrcpy.screenOff%"
          },
          "scrcpy.stayAwake": {
            "type": "boolean",
            "default": true,
            "order": 5,
            "markdownDescription": "%config.scrcpy.stayAwake%"
          },
          "scrcpy.showTouches": {
            "type": "boolean",
            "default": false,
            "order": 6,
            "markdownDescription": "%config.scrcpy.showTouches%"
          },
          "scrcpy.lockVideoOrientation": {
            "type": "boolean",
            "default": false,
            "order": 7,
            "markdownDescription": "%config.scrcpy.lockVideoOrientation%"
          },
          "scrcpy.crop": {
            "type": "string",
            "default": "",
            "order": 8,
            "markdownDescription": "%config.scrcpy.crop%"
          },
          "scrcpy.displayId": {
            "type": "number",
            "default": 0,
            "order": 9,
            "markdownDescription": "%config.scrcpy.displayId%"
          }
        }
      },
      {
        "title": "%config.title.audio%",
        "order": 4,
        "properties": {
          "scrcpy.audio": {
            "type": "boolean",
            "default": true,
            "order": 0,
            "markdownDescription": "%config.scrcpy.audio%"
          },
          "scrcpy.audioSource": {
            "type": "string",
            "default": "output",
            "order": 1,
            "enum": [
              "output",
              "mic",
              "playback-capture"
            ],
            "enumDescriptions": [
              "%config.scrcpy.audioSource.output%",
              "%config.scrcpy.audioSource.mic%",
              "%config.scrcpy.audioSource.playback-capture%"
            ],
            "markdownDescription": "%config.scrcpy.audioSource%"
          }
        }
      },
      {
        "title": "%config.title.input%",
        "order": 5,
        "properties": {
          "scrcpy.scrollSensitivity": {
            "type": "number",
            "default": 1,
            "minimum": 0.1,
            "maximum": 5,
            "markdownDescription": "%config.scrcpy.scrollSensitivity%"
          },
          "scrcpy.keyboardMode": {
            "type": "string",
            "default": "inject",
            "order": 1,
            "enum": [
              "inject",
              "uhid"
            ],
            "enumDescriptions": [
              "%config.scrcpy.keyboardMode.inject%",
              "%config.scrcpy.keyboardMode.uhid%"
            ],
            "markdownDescription": "%config.scrcpy.keyboardMode%"
          }
        }
      },
      {
        "title": "%config.title.screenshots%",
        "order": 6,
        "properties": {
          "scrcpy.screenshotSavePath": {
            "type": "string",
            "default": "",
            "order": 0,
            "markdownDescription": "%config.scrcpy.screenshotSavePath%"
          },
          "scrcpy.screenshotShowSaveDialog": {
            "type": "boolean",
            "default": false,
            "order": 1,
            "markdownDescription": "%config.scrcpy.screenshotShowSaveDialog%"
          },
          "scrcpy.screenshotPreview": {
            "type": "boolean",
            "default": true,
            "order": 2,
            "markdownDescription": "%config.scrcpy.screenshotPreview%"
          }
        }
      },
      {
        "title": "%config.title.recording%",
        "order": 7,
        "properties": {
          "scrcpy.recordingFormat": {
            "type": "string",
            "default": "webm",
            "order": 0,
            "enum": [
              "webm",
              "mp4"
            ],
            "enumDescriptions": [
              "%config.scrcpy.recordingFormat.webm%",
              "%config.scrcpy.recordingFormat.mp4%"
            ],
            "markdownDescription": "%config.scrcpy.recordingFormat%"
          },
          "scrcpy.recordingSavePath": {
            "type": "string",
            "default": "",
            "order": 1,
            "markdownDescription": "%config.scrcpy.recordingSavePath%"
          },
          "scrcpy.recordingShowSaveDialog": {
            "type": "boolean",
            "default": true,
            "order": 2,
            "markdownDescription": "%config.scrcpy.recordingShowSaveDialog%"
          }
        }
      },
      {
        "title": "%config.title.connection%",
        "order": 8,
        "properties": {
          "scrcpy.autoConnect": {
            "type": "boolean",
            "default": true,
            "order": 0,
            "markdownDescription": "%config.scrcpy.autoConnect%"
          },
          "scrcpy.autoReconnect": {
            "type": "boolean",
            "default": true,
            "order": 1,
            "markdownDescription": "%config.scrcpy.autoReconnect%"
          },
          "scrcpy.reconnectRetries": {
            "type": "number",
            "default": 2,
            "order": 2,
            "enum": [
              1,
              2,
              3,
              5
            ],
            "enumDescriptions": [
              "%config.scrcpy.reconnectRetries.1%",
              "%config.scrcpy.reconnectRetries.2%",
              "%config.scrcpy.reconnectRetries.3%",
              "%config.scrcpy.reconnectRetries.5%"
            ],
            "markdownDescription": "%config.scrcpy.reconnectRetries%"
          }
        }
      },
      {
        "title": "%config.title.iosControl%",
        "order": 9,
        "properties": {
          "scrcpy.ios.enabled": {
            "type": "boolean",
            "default": false,
            "order": 0,
            "tags": [
              "experimental"
            ],
            "markdownDescription": "%config.scrcpy.ios.enabled%"
          },
          "scrcpy.ios.webDriverAgentEnabled": {
            "type": "boolean",
            "default": false,
            "order": 1,
            "markdownDescription": "%config.scrcpy.ios.webDriverAgentEnabled%"
          },
          "scrcpy.ios.webDriverAgentPort": {
            "type": "number",
            "default": 8100,
            "order": 2,
            "minimum": 1,
            "maximum": 65535,
            "markdownDescription": "%config.scrcpy.ios.webDriverAgentPort%"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "scrcpy.start",
        "title": "%command.start%"
      },
      {
        "command": "scrcpy.stop",
        "title": "%command.stop%"
      },
      {
        "command": "scrcpy.connectWifi",
        "title": "%command.connectWifi%",
        "icon": "$(radio-tower)"
      },
      {
        "command": "scrcpy.installApk",
        "title": "%command.installApk%",
        "icon": "$(package)"
      },
      {
        "command": "scrcpy.uploadFiles",
        "title": "%command.uploadFiles%",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "scrcpy.launchApp",
        "title": "%command.launchApp%",
        "icon": "$(rocket)"
      },
      {
        "command": "scrcpy.openSettings",
        "title": "%command.openSettings%",
        "icon": "$(gear)"
      },
      {
        "command": "scrcpy.toggleRecording",
        "title": "%command.toggleRecording%"
      },
      {
        "command": "scrcpy.listCameras",
        "title": "%command.listCameras%",
        "icon": "$(device-camera-video)"
      },
      {
        "command": "scrcpy.selectDisplay",
        "title": "%command.selectDisplay%",
        "icon": "$(device-desktop)"
      },
      {
        "command": "scrcpy.startIOSInput",
        "title": "%command.startIOSInput%",
        "icon": "$(play)"
      },
      {
        "command": "scrcpy.switchToTab1",
        "title": "%command.switchToTab1%"
      },
      {
        "command": "scrcpy.switchToTab2",
        "title": "%command.switchToTab2%"
      },
      {
        "command": "scrcpy.switchToTab3",
        "title": "%command.switchToTab3%"
      },
      {
        "command": "scrcpy.switchToTab4",
        "title": "%command.switchToTab4%"
      },
      {
        "command": "scrcpy.switchToTab5",
        "title": "%command.switchToTab5%"
      },
      {
        "command": "scrcpy.switchToTab6",
        "title": "%command.switchToTab6%"
      },
      {
        "command": "scrcpy.switchToTab7",
        "title": "%command.switchToTab7%"
      },
      {
        "command": "scrcpy.switchToTab8",
        "title": "%command.switchToTab8%"
      },
      {
        "command": "scrcpy.switchToTab9",
        "title": "%command.switchToTab9%"
      },
      {
        "command": "scrcpy.browseScrcpyPath",
        "title": "%command.browseScrcpyPath%"
      },
      {
        "command": "scrcpy.browseAdbPath",
        "title": "%command.browseAdbPath%"
      },
      {
        "command": "scrcpy.browseScreenshotPath",
        "title": "%command.browseScreenshotPath%"
      },
      {
        "command": "scrcpy.browseRecordingPath",
        "title": "%command.browseRecordingPath%"
      },
      {
        "command": "scrcpy.browseApkInstallPath",
        "title": "%command.browseApkInstallPath%"
      },
      {
        "command": "scrcpy.resetScrcpyPath",
        "title": "%command.resetScrcpyPath%"
      },
      {
        "command": "scrcpy.resetAdbPath",
        "title": "%command.resetAdbPath%"
      },
      {
        "command": "scrcpy.resetScreenshotPath",
        "title": "%command.resetScreenshotPath%"
      },
      {
        "command": "scrcpy.resetRecordingPath",
        "title": "%command.resetRecordingPath%"
      },
      {
        "command": "scrcpy.resetApkInstallPath",
        "title": "%command.resetApkInstallPath%"
      }
    ],
    "keybindings": [
      {
        "command": "scrcpy.switchToTab1",
        "key": "alt+1",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      },
      {
        "command": "scrcpy.switchToTab2",
        "key": "alt+2",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      },
      {
        "command": "scrcpy.switchToTab3",
        "key": "alt+3",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      },
      {
        "command": "scrcpy.switchToTab4",
        "key": "alt+4",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      },
      {
        "command": "scrcpy.switchToTab5",
        "key": "alt+5",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      },
      {
        "command": "scrcpy.switchToTab6",
        "key": "alt+6",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      },
      {
        "command": "scrcpy.switchToTab7",
        "key": "alt+7",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      },
      {
        "command": "scrcpy.switchToTab8",
        "key": "alt+8",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      },
      {
        "command": "scrcpy.switchToTab9",
        "key": "alt+9",
        "when": "activeViewlet == 'scrcpy' || activeView == 'scrcpy.deviceView'"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "scrcpy.openSettings",
          "when": "view == scrcpy.deviceView",
          "group": "navigation@1"
        },
        {
          "command": "scrcpy.connectWifi",
          "when": "view == scrcpy.deviceView",
          "group": "0_connection@1"
        },
        {
          "command": "scrcpy.uploadFiles",
          "when": "view == scrcpy.deviceView && scrcpy.activeDevicePlatform == 'android'",
          "group": "1_files@1"
        },
        {
          "command": "scrcpy.installApk",
          "when": "view == scrcpy.deviceView && scrcpy.activeDevicePlatform == 'android'",
          "group": "1_files@2"
        },
        {
          "command": "scrcpy.launchApp",
          "when": "view == scrcpy.deviceView && scrcpy.supportsAppLaunch",
          "group": "2_device@1"
        },
        {
          "command": "scrcpy.selectDisplay",
          "when": "view == scrcpy.deviceView && scrcpy.activeDevicePlatform == 'android'",
          "group": "2_device@2"
        },
        {
          "command": "scrcpy.listCameras",
          "when": "view == scrcpy.deviceView && scrcpy.activeDevicePlatform == 'android'",
          "group": "2_device@3"
        },
        {
          "command": "scrcpy.startIOSInput",
          "when": "view == scrcpy.deviceView && isMac",
          "group": "3_ios@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scrcpy",
          "title": "%view.scrcpy%",
          "icon": "media/android.svg"
        }
      ]
    },
    "views": {
      "scrcpy": [
        {
          "type": "webview",
          "id": "scrcpy.deviceView",
          "name": "%view.deviceView%",
          "icon": "media/android.svg",
          "contextualTitle": "scrcpy"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build:ios-helper": "cd native/ios-helper && ./build.sh || true",
    "ios:preview": "cd native/ios-helper && swift run ios-preview",
    "compile": "npm run build:ios-helper && webpack",
    "watch": "webpack --watch",
    "package": "npm run build:ios-helper && webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml,html,css}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml,html,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "release": "gh workflow run deploy.yml --ref main && echo 'Deploy workflow triggered! Watch progress at: https://github.com/izantech/scrcpy-vscode/actions'"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,html,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "h264-sps-parser": "^0.2.1",
    "opus-decoder": "^0.7.11"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^4.0.15",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^8.56.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
